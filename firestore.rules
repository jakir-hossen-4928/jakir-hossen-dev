rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || 
              request.auth.token.email == 'mdjakirkhan4928@gmail.com');
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Apps collection - public read, admin write
    match /apps/{appId} {
      // Anyone can read apps
      allow read: if true;
      
      // Only admins can create, update, or delete apps
      allow create, update, delete: if isAdmin();
      
      // Comments subcollection
      match /comments/{commentId} {
        // Anyone can read comments
        allow read: if true;
        
        // Authenticated users can create comments
        allow create: if isAuthenticated() && 
          request.resource.data.userId == request.auth.uid &&
          request.resource.data.appId == appId;
        
        // Users can update/delete their own comments, admins can update/delete any
        allow update, delete: if isAuthenticated() && 
          (resource.data.userId == request.auth.uid || isAdmin());
      }
    }
    
    // Testers collection
    match /testers/{testerId} {
      // Authenticated users can read tester data
      allow read: if isAuthenticated();
      
      // Allow public creation for subscription form (no auth required for initial subscribe)
      // Only allow if the document ID matches the one provided in data or is auto-generated
      allow create: if true;
      
      // Users can update/delete their own entry, admins can update/delete any
      allow update, delete: if isAuthenticated() && 
        (resource.data.uid == request.auth.uid || isAdmin());
    }

    // Users collection - strict admin control for role management
    match /users/{userId} {
      // Admins can read all users
      allow read: if isAdmin();
      
      // Users can create their own profile on sign-up (role must be 'user')
      allow create: if isAuthenticated() && 
                      request.auth.uid == userId &&
                      request.resource.data.role == 'user';
      
      // Users can read and update their own profile (but not their role)
      allow read, update: if isAuthenticated() && 
                            request.auth.uid == userId &&
                            (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));
      
      // Only admins can update roles, and they cannot update their own role
      allow update: if isAdmin() && 
                      request.auth.uid != userId &&
                      request.resource.data.role in ['user', 'admin'];
    }

    // Role change logs - admin read only, system writes
    match /roleChanges/{logId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
    }

    // Subscribers collection
    match /subscribers/{subscriberId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update, delete: if isAdmin();
    }

    // Blogs collection
    match /blogs/{blogId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Notes collection - admin only
    match /notes/{noteId} {
      allow read, write: if isAdmin();
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
